@model ControleEstoque.Models.Sale

@{
    ViewData["title"] = "Edit";
}

<h1>Editar</h1>

<h4>Venda</h4>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="ClienteId" class="control-label"></label>
        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.Clients"></select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <h5>Produtos</h5>

    <div class="form-group">
        @for (int i = 0; i < Model.SaleProducts.Count; i++)
        {
            var index = i + 1;
            <label asp-for="SaleProducts[i].ProductId" class="control-label">Produto @index</label>
            <select asp-for="SaleProducts[i].ProductId" asp-items="ViewBag.Products" class="form-control"></select>
            <span asp-validation-for="SaleProducts[i].ProductId" class="text-danger"></span>

            <label asp-for="SaleProducts[i].Quantity" class="control-label">Quantidade</label>
            <input asp-for="SaleProducts[i].Quantity" class="form-control" />
            <span asp-validation-for="SaleProducts[i].Quantity" class="text-danger"></span>
        }
    </div>

    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-primary" /> |
        <a asp-action="Index">Voltar ao vendas</a>
    </div>
</form>