<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="imagex/png" href="3x4.ico">
    <title>@ViewData["Title"] - Estoque</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//use.fontawesome.com/releases/v6.0.0/css/all.css">
    <link rel="icon" type="image/x-icon" href="favicon.ico">
</head>

<body>
    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar" class="active">
            <div class="custom-menu">
                <button type="button" id="sidebarCollapse" class="btn btn-primary" style="position: fixed;">
                    <i class=" fa fa-bars"></i>
                    <span class="sr-only">Toggle Menu</span>
                </button>
            </div>
            <div class="p-4" style="position: fixed;">
                <h1><a href=" #" class="logo"><span class="fa fa-boxes mr-3"></span></a></h1>
                <ul class="list-unstyled components mb-5" style="position: fixed;">
                    <li class="active">
                        <a asp-controller="Home" asp-action="index"><span class="fa fa-home mr-3"></span> Home</a>
                    </li>
                    <li>
                        <a asp-controller="Products" asp-action="index"><span class="fa fa-briefcase mr-3"></span>
                            Produtos</a>
                    </li>
                    <li>
                        <a asp-controller="Clients" asp-action="index"><span class="fa fa-user mr-3"></span>
                            Clientes</a>
                    </li>
                    <li>
                        <a asp-controller="Sales" asp-action="index"><span class="fa fa-dollar-sign mr-3"></span>
                            Vendas</a>
                    </li>
                </ul>


            </div>
        </nav>

        <div id="content" class="p-4 p-md-5 pt-5">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="jquery-3.5.1.min.js"> </script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - Sistema estoque by Salom√£o
    </div>
</footer>

</html>
